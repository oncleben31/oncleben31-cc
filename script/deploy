#!/usr/bin/env bash
set -o errexit -o nounset

# Save some useful information
SHA=`git rev-parse --short HEAD`

# change folder to the generated files during the build
cd _site

# basic git settings for the commit
git config user.name "Travis CI"
git config user.email "github@travis-ci.org"

git remote add upstream "https://$GH_TOKEN@github.com/oncleben31/oncleben31.github.io.git"
git fetch upstream
git reset upstream/gh-pages

touch .

git add -A .
git commit -m "rebuild pages at ${rev}"
git push -q upstream HEAD:gh-pages
